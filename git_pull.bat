@echo off
REM ------------------------------------------
REM 脚本名称: git_pull.bat
REM 功能: 从远程仓库拉取最新代码
REM 放置位置: Git 仓库根目录
REM ------------------------------------------

echo.
echo =========================================
echo 开始拉取最新代码 (git pull)...
echo =========================================
echo.

REM 执行 git pull
git pull

REM 检查 git pull 的退出码
if %errorlevel% neq 0 (
    echo.
    echo ------------------------------------------
    echo !!! Git 拉取失败 !!!
    echo 请检查网络连接、本地修改或分支设置。
    echo ------------------------------------------
) else (
    echo.
    echo ------------------------------------------
    echo Git 拉取成功!
    echo ------------------------------------------
)

echo.
pause